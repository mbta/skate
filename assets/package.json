{
  "name": "skate",
  "description": "front-end for MBTA bus dispatch application",
  "repository": {
    "type": "git",
    "url": "https://github.com/mbta/skate.git",
    "directory": "assets"
  },
  "license": "AGPL-3.0-only",
  "scripts": {
    "deploy": "webpack --mode production",
    "build": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest -u",
    "test:debugger": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "check": "tsc --noEmit && npm run lint:check && npm run format:check",
    "lint": "eslint --fix \"{.,**}/*.{js,json,ts,tsx}\"",
    "lint:check": "eslint --max-warnings 0 \"{.,**}/*.{js,json,ts,tsx}\"",
    "format": "prettier --write \"{.,**}/*.{js,json,ts,tsx,css,scss,mdx}\"",
    "format:check": "prettier --check \"{.,**}/*.{js,json,ts,tsx,css,scss,mdx}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic"
  },
  "dependencies": {
    "@fullstory/browser": "^1.7.1",
    "@react-hook/media-query": "^1.1.1",
    "@rehooks/component-size": "^1.0.3",
    "@sentry/fullstory": "^2.0.0",
    "@sentry/react": "^7.15.0",
    "@tippyjs/react": "^4.2.6",
    "@types/uuid": "^9.0.1",
    "bootstrap": "^5.2.3",
    "core-js": "^3.28.0",
    "identity-obj-proxy": "^3.0.0",
    "leaflet": "^1.9.3",
    "leaflet-defaulticon-compatibility": "^0.1.1",
    "leaflet.fullscreen": "^2.4.0",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.0",
    "react-router-dom": "^6.3.0",
    "superstruct": "^1.0.3",
    "uuid": "^9.0.0",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.19.3",
    "@jest/globals": "^29.6.2",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.5.3",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-webpack5": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^6.0.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/leaflet": "^1.9.1",
    "@types/leaflet.fullscreen": "^1.6.1",
    "@types/phoenix": "^1.6.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.0.6",
    "@types/react-leaflet": "^2.8.2",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "babel-jest": "^29.4.3",
    "chromatic": "^7.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "file-loader": "^6.2.0",
    "fishery": "^2.2.2",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fail-on-console": "^3.1.1",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.8.7",
    "react-test-renderer": "^18.2.0",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "screenfull": "^6.0.2",
    "storybook": "^7.5.3",
    "svgo": "^3.0.2",
    "svgo-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.1",
    "testing-library-selector": "^0.2.1",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "typescript-language-server": "^4.1.3",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "clearMocks": true,
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.test.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@react-leaflet|react-leaflet|screenfull)/)"
    ],
    "testRegex": "(src|tests)/.*\\.test\\.tsx?$",
    "modulePaths": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/tests/testHelpers/svgStubber.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.tsx"
    ],
    "collectCoverage": true,
    "globalSetup": "./tests/global-setup.js",
    "preset": "ts-jest/presets/js-with-babel"
  }
}
