{
  "name": "skate",
  "description": "front-end for MBTA bus dispatch application",
  "repository": {
    "type": "git",
    "url": "https://github.com/mbta/skate.git",
    "directory": "assets"
  },
  "license": "AGPL-3.0-only",
  "scripts": {
    "deploy": "webpack --mode production",
    "build": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest -u",
    "test:debugger": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "check": "tsc --noEmit && npm run lint:check && npm run format:check",
    "lint": "eslint --fix \"{.,**}/*.{js,json,ts,tsx}\"",
    "lint:check": "eslint \"{.,**}/*.{js,json,ts,tsx}\"",
    "format": "prettier --write \"{.,**}/*.{js,json,ts,tsx,css,scss}\"",
    "format:check": "prettier --check \"{.,**}/*.{js,json,ts,tsx,css,scss}\""
  },
  "dependencies": {
    "@react-hook/media-query": "^1.1.1",
    "@rehooks/component-size": "^1.0.3",
    "@sentry/react": "^7.15.0",
    "@tippyjs/react": "^4.2.6",
    "@types/uuid": "^8.3.4",
    "bootstrap": "^5.2.3",
    "core-js": "^3.21.1",
    "identity-obj-proxy": "^3.0.0",
    "leaflet": "^1.9.2",
    "leaflet-defaulticon-compatibility": "^0.1.1",
    "leaflet.fullscreen": "^2.4.0",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.1.0",
    "react-router-dom": "^6.3.0",
    "superstruct": "^0.16.5",
    "uuid": "^8.3.2",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^27.4.1",
    "@types/leaflet": "^1.8.0",
    "@types/leaflet.fullscreen": "^1.6.1",
    "@types/phoenix": "^1.5.4",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-leaflet": "^2.8.2",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "babel-jest": "^29.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "fishery": "^2.2.2",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^2.6.0",
    "node-sass": "^7.0.3",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "sass-loader": "^13.0.2",
    "screenfull": "^6.0.2",
    "svg-inline-loader": "^0.8.2",
    "svgo": "^2.8.0",
    "svgo-loader": "^3.0.0",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "jest": {
    "clearMocks": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@react-leaflet|react-leaflet|screenfull)/)"
    ],
    "testRegex": "(src|tests)/.*\\.test\\.tsx?$",
    "modulePaths": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/tests/testHelpers/svgStubber.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.tsx"
    ],
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.test.json"
      }
    },
    "globalSetup": "./tests/global-setup.js"
  }
}
